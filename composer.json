{
  "name": "Scafolding/drupal",
  "require": {
    "composer/installers": "~1.0",
    "drupal/core": "8.0.*",
    "drupal/devel": "8.1.*@dev"
  },

 "repositories": [
    {
      "type": "composer",
      "url": "https://packagist.drupal-composer.org"
    }
  ],

  "require-dev": {
    "drush/drush": "8.0.*",
    "drupal/console": "0.10.*"
  },
  "extra": {
    "installer-paths": {
      "docroot/core": ["type:drupal-core"],
      "docroot/modules/contrib/{$name}": ["type:drupal-module"]
    }
  }
}
